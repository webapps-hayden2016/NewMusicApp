@model NewMusicApp.Models.Album
@{
    ViewData["Title"] = "Add Album";
}
<h2>Enter a new Album</h2>
<div class="form">
    <form asp-action="Create" class="form-horizontal">
        <div class="from-group">
            <label asp-for="Title" class="col-sm-2">Album Name: </label>
            <div class="col-sm-10">
                <input asp-for="Title" class="form-control" autofocus />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <label asp-for="ArtistID" class="col-sm-2">Artist: </label>
            <div class="col-sm-10">
                <select class="form-control valid" asp-for="ArtistID" asp-items="ViewBag.Artists">
                    <option value="">-- Select Artist --</option>
                </select>
            </div>
            <label asp-for="GenreID" class="col-sm-2">Genre: </label>
            <div class="col-sm-10">
                <select class="form-control valid" asp-for="GenreID"asp-items="ViewBag.Genre">
                    <option value="">-- Select Genre --</option>
                </select>
            </div>
            <label asp-for="Price" class="col-sm-2">Price: $</label>
            <div class="col-sm-10">
                <input asp-for="Price" class="form-control" autofocus />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" class="btn btn-info"/>
                <a href="/Albums" class="btn btn-default" formnovalidate>Return to List</a>
            </div>
        </div>
    </form>
</div>
