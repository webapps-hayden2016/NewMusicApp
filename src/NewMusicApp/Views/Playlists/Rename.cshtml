@model NewMusicApp.Models.Playlist
@{
    ViewData["Title"] = "Rename Playlist";
}
@Html.AntiForgeryToken()
<h2>Rename Playlist</h2>
<hr />
<div class="form">
    <form asp-action="Rename" class="form-horizontal">
        @Html.HiddenFor(p => p.PlaylistID)
        <div class="form-group">
            <label asp-for="Name" class="col-sm-2">Playlist Name: </label>
            <div class="col-sm-10">
                <input asp-for="Name" class="form-control" autofocus />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" class="btn btn-info" />
                <a href="/Playlists" class="btn btn-default" formnovalidate>Return to List</a>
            </div>
        </div>
    </form>
</div>
