@model NewMusicApp.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}
@Html.AntiForgeryToken()

<h2>Login</h2>
<hr />
<div class="form">
    <form asp-action="Login" class="form-horizontal">
        <div class="form-group">
            <label asp-for="Email" class="col-sm-2">Email: </label>
            <div class="col-sm-10">
                <input asp-for="Email" class="form-control" autofocus />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="col-sm-2">Password: </label>
            <div class="col-sm-10">
                <input asp-for="Password" type="password" class="form-control" autofocus />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" class="btn btn-info" />
                <a href="/Home" formnovalidate>Cancel</a>
            </div>
        </div>
    </form>
</div>
