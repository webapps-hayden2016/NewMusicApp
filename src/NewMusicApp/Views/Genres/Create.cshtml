@model NewMusicApp.Models.Genre
@{
    ViewData["Title"] = "Add Genre";
}

<h2>Enter a new Genre</h2>
<div class="form">
    <form asp-action="Create" class="form-horizontal">
        <div class="form-group">
            <label asp-for="Name" class="col-sm-2">Artist Name: </label>
            <div class="col-sm-10">
                <input asp-for="Name" class="form-control" autofocus />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" class="btn btn-danger"/>
                <a href="/Genres" class="btn btn-default">Return to List</a>
            </div>
        </div>
    </form>
</div>