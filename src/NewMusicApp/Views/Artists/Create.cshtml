@model NewMusicApp.Models.Artist
@{
    ViewData["Title"] = "Add Artist";
}

<h2>Enter a new Artist</h2>
<div class="form">
    <form asp-action="Create" class="form-horizontal">
        <div class="form-group">
            <label asp-for="Name" class="col-sm-2">Artist Name: </label>
            <div class="col-sm-10">
                <input asp-for="Name" class="form-control" autofocus />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <label asp-for="Bio" class="col-sm-2">Bio: </label>
            <div class="col-sm-10">
                <input asp-for="Bio" class="form-control" autofocus />
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" class="btn btn-success"/>
                <a href="/Artists" class="btn btn-default">Return to List</a>
            </div>
        </div>
    </form>
</div>